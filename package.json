{
  "name": "audioworklet-polyfill",
  "version": "1.1.2",
  "description": "AudioWorklet polyfill using the legacy ScriptProcessor API.",
  "source": "src/index.js",
  "main": "dist/audioworklet-polyfill.js",
  "license": "Apache-2.0",
  "author": "The Chromium Authors",
  "contributors": [
    {
      "name": "Jason Miller",
      "email": "developit@google.com"
    }
  ],
  "repository": "GoogleChromeLabs/audioworklet-polyfill",
  "scripts": {
    "build": "microbundle -f iife",
    "start": "concurrently serve \"microbundle watch -f iife\"",
    "test": "eslint src",
    "deploy": "npm run build && cp -rf demo build && cp -r dist build/ && sed -i '' 's/\\.\\.\\/dist/dist/' build/index.html && gh-pages -d build && rm -rf build"
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "browser": true,
      "node": false
    },
    "rules": {
      "indent": [
        2,
        2
      ],
      "semi": [
        2,
        "always"
      ],
      "prefer-const": 1
    },
    "globals": {
      "registerProcessor": 1,
      "AudioWorkletProcessor": 1
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "audio",
    "worklet",
    "polyfill",
    "audio worklet",
    "scriptprocessornode",
    "web audio"
  ],
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^3.1.0",
    "microbundle": "^0.12.3",
    "serve": "^11.3.2"
  }
}
